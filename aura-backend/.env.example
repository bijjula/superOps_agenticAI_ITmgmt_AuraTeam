# Aura Backend Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
POSTGRES_USER=aura_user
POSTGRES_PASSWORD=aura_password
DATABASE_URL=postgresql://aura_user:aura_password@localhost:5432/aura_servicedesk

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/aura_servicedesk

# Redis Configuration
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Service URLs (for API Gateway)
SERVICE_DESK_URL=http://localhost:8001
INFRA_TALENT_URL=http://localhost:8002
THREAT_INTEL_URL=http://localhost:8003

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=*

# AI Configuration
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Performance Configuration
REDIS_CACHE_TTL=3600
DATABASE_POOL_SIZE=20
API_RATE_LIMIT=1000
